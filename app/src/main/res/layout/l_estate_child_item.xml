<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_estate_margin_between"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/layKhabar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imgKhabar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_image_estate_option_height"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:src="@drawable/ic_khabar" />

                <LinearLayout
                    android:id="@+id/layCountNewNews"
                    android:layout_width="@dimen/size_layBack_notify_child_slide"
                    android:layout_height="@dimen/size_layBack_notify_child_slide"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/size_margin_lay_notify_left_right"
                    android:layout_marginTop="@dimen/size_margin_lay_notify_top"
                    android:background="@drawable/circle_background"
                    android:orientation="vertical">

                    <ir.jahanmirbazh.components.SizeAdjustingTextView
                        android:id="@+id/txtCountNewNews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/color_white"
                        android:typeface="serif" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layGhabz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_weight="1"
                android:gravity="left">

                <ImageView
                    android:id="@+id/imgGhabz"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_image_estate_option_height"
                    android:clickable="true"
                    android:src="@drawable/ic_ghabz" />

                <LinearLayout
                    android:id="@+id/layCountNewBill"
                    android:layout_width="@dimen/size_layBack_notify_child_slide"
                    android:layout_height="@dimen/size_layBack_notify_child_slide"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/size_margin_lay_notify_left_right"
                    android:layout_marginTop="@dimen/size_margin_lay_notify_top"
                    android:background="@drawable/circle_background"
                    android:orientation="vertical">

                    <ir.jahanmirbazh.components.SizeAdjustingTextView
                        android:id="@+id/txtCountNewBill"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/color_white"
                        android:typeface="serif" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/size_estate_margin_between"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/layPardakht"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imgPardakht"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_image_estate_option_height"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:src="@drawable/ic_pardakht" />

                <LinearLayout
                    android:id="@+id/layCountNewPayment"
                    android:layout_width="@dimen/size_layBack_notify_child_slide"
                    android:layout_height="@dimen/size_layBack_notify_child_slide"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/size_margin_lay_notify_left_right"
                    android:layout_marginTop="@dimen/size_margin_lay_notify_top"
                    android:background="@drawable/circle_background"
                    android:orientation="vertical">

                    <ir.jahanmirbazh.components.SizeAdjustingTextView
                        android:id="@+id/txtCountNewPayment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="150"
                        android:textColor="@color/color_white"
                        android:typeface="serif" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_weight="1"
                android:gravity="left">

                <ImageView
                    android:id="@+id/imgTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_image_estate_option_height"
                    android:clickable="true"
                    android:src="@drawable/ic_ticket" />

                <LinearLayout
                    android:id="@+id/layCountNewTicket"
                    android:layout_width="@dimen/size_layBack_notify_child_slide"
                    android:layout_height="@dimen/size_layBack_notify_child_slide"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/size_margin_lay_notify_left_right"
                    android:layout_marginTop="@dimen/size_margin_lay_notify_top"
                    android:background="@drawable/circle_background"
                    android:orientation="vertical">

                    <ir.jahanmirbazh.components.SizeAdjustingTextView
                        android:id="@+id/txtCountNewTicketDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/color_white"
                        android:typeface="serif" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



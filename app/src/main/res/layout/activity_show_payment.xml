<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_main_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg_repeative"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layToolbarShowPaymentPage"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/toolbar_activity"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layImgBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_arrow_back_white_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <net.kianoni.fontloader.TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="مشخصات فیش پرداختی"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_font_header_activity"
                    app:fontFile="fonts/SCNormal.otf" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/rounded_rectangle_payment_detail_frame_box">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="@dimen/size_margin_top_bill_detail_item_from_title"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_lst_item_normal"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ir.jahanmirbazh.components.PersianTextViewNormal
                                android:id="@+id/txtRegDate"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="1394/06/01"
                                android:textDirection="rtl"
                                android:layoutDirection="rtl"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult" />

                            <net.kianoni.fontloader.TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="تاریخ ثبت"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult"
                                app:fontFile="fonts/sl.ttf" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_lst_item_normal"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ir.jahanmirbazh.components.PersianTextViewNormal
                                android:id="@+id/txtPersonName"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="1394/06/31"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult" />

                            <net.kianoni.fontloader.TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="پرداخت کننده"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult"
                                app:fontFile="fonts/sl.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_lst_item_normal"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ir.jahanmirbazh.components.PersianTextViewNormal
                                android:id="@+id/txtType"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="1394/06/31"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult" />

                            <net.kianoni.fontloader.TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="نحوه پرداخت"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult"
                                app:fontFile="fonts/sl.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_lst_item_normal"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ir.jahanmirbazh.components.PersianTextViewNormal
                                android:id="@+id/txtPrice"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="25000"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult" />

                            <net.kianoni.fontloader.TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="مبلغ پرداختی"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult"
                                app:fontFile="fonts/sl.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_lst_item_normal"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ir.jahanmirbazh.components.PersianTextViewNormal
                                android:id="@+id/txtBank"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="25000"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult" />

                            <net.kianoni.fontloader.TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="درگاه پرداخت"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult"
                                app:fontFile="fonts/sl.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_lst_item_normal"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ir.jahanmirbazh.components.PersianTextViewNormal
                                android:id="@+id/txtPayer"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="25000"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult" />

                            <net.kianoni.fontloader.TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="پرداخت کننده"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult"
                                app:fontFile="fonts/sl.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_lst_item_normal"
                            android:gravity="right|center_vertical"
                            android:orientation="vertical">
                            <net.kianoni.fontloader.TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="توضیحات پرداخت"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult"
                                app:fontFile="fonts/sl.ttf" />
                            <ir.jahanmirbazh.components.PersianTextViewNormal
                                android:id="@+id/txtDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="25000"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/size_font_defult" />


                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="top"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25" />

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:src="@drawable/ic_triangle_left" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_txt_bill_background_height"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_bill_title"
                    android:gravity="center">

                    <net.kianoni.fontloader.TextView
                        android:id="@+id/txtPaymentDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="جزییات پرداخت"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size_font_defult"
                        app:fontFile="fonts/sl.ttf" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>

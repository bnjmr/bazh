<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layAboutText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <net.kianoni.fontloader.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="سامانه مدیریت مجتمع های تجاری و مسکونی باژ"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_font_big"
        app:fontFile="fonts/is.ttf" />

    <net.kianoni.fontloader.TextView
        android:id="@+id/txtVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_font_small"
        app:fontFile="fonts/gothi.ttf" />

    <net.kianoni.fontloader.TextView
        android:id="@+id/txtBazhSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="http://www.bazh.ir"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_font_small"
        app:fontFile="fonts/gothi.ttf" />

    <net.kianoni.fontloader.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="طراحی و پیاده سازی شرکت جهانمیر"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_font_big"
        app:fontFile="fonts/is.ttf" />

    <net.kianoni.fontloader.TextView
        android:id="@+id/txtJahanmirSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="http://www.jahanmir.ir"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_font_small"
        app:fontFile="fonts/gothi.ttf" />


    <ir.jahanmirbazh.components.PersianTextViewNormal
        android:id="@+id/txtJahanmirTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="8dp"

        android:text="+9871-38015"
        android:textColor="@color/color_white" />

</LinearLayout>

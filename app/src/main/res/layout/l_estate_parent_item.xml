<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layEstateHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_image_estate_option_height"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-15dp"
        android:clickable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_img_expand_collapse"
                android:layout_marginRight="-3dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">
                <!--<ImageView android:layout_width="@dimen/size_image_tab_notify"-->
                <!--android:src="@drawable/ic_dropdown"-->
                <!--android:scaleType="fitEnd"-->
                <!--android:layout_marginBottom="-9dp"-->
                <!--android:layout_gravity="bottom"-->
                <!--android:layout_height="@dimen/size_image_tab_notify"/>-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_line_height"

                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/size_image_estate_option_height"
                android:layout_height="@dimen/size_image_estate_option_height"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_estate_home_icon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/imgExpandStatus"
                    android:layout_width="@dimen/size_img_expand_collapse"
                    android:layout_height="wrap_content"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_expand_estate_menu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layBackEstateName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.5"
                android:background="@drawable/back_estate_name_normal">

                <net.kianoni.fontloader.TextView
                    android:id="@+id/txtEstateName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center|center_vertical"
                    android:maxLines="2"
                    android:text="ملک 1002"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_font_big"
                    app:fontFile="fonts/irsans.ttf" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>



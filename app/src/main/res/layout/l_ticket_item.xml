<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_lst_item_normal"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layMoreDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMoreDetail"
                android:layout_width="@dimen/size_image_big"
                android:layout_height="@dimen/size_image_big"
                android:src="@drawable/ic_more_detail" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#8fff" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <net.kianoni.fontloader.TextView
                    android:id="@+id/txtTicketTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="شرکت گاز "
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_font_defult"
                    app:fontFile="fonts/sl.ttf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#8fff" />

                <ir.jahanmirbazh.components.PersianTextViewThin
                    android:id="@+id/txtTicketStatus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1394/06/01 "
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_font_defult" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#8fff" />

                <ir.jahanmirbazh.components.PersianTextViewThin
                    android:id="@+id/txtTicketDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textDirection="rtl"
                    android:gravity="center"
                    android:text="1394/06/26"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_font_defult" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:orientation="vertical">

                <net.kianoni.fontloader.TextView
                    android:id="@+id/txtBillSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="موضوع تیکت"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_font_defult"
                    app:fontFile="fonts/sl.ttf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="#8fff" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="وضعیت تیکت"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_font_defult"
                    app:fontFile="fonts/sl.ttf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:background="#8fff" />

                <net.kianoni.fontloader.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_font_defult"
                    app:fontFile="fonts/sl.ttf" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layCountUnSeenTicket"
        android:layout_width="@dimen/size_layBack_notify_child_slide"
        android:layout_height="@dimen/size_layBack_notify_child_slide"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/circle_background"
        android:orientation="vertical">

        <ir.jahanmirbazh.components.SizeAdjustingTextView
            android:id="@+id/txtCountUnSeenTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/color_white"
            android:typeface="serif" />
    </LinearLayout>

</FrameLayout>

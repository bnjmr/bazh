<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:src="@drawable/ic_triangle_left" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_bottom_icon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">

            <net.kianoni.fontloader.TextView
                android:id="@+id/txtNewPaymentOpenClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="+"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_font_big"
                android:typeface="sans"
                app:fontFile="fonts/sl.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_rounded_bottom_title">

            <net.kianoni.fontloader.TextView
                android:id="@+id/txtNewPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="ثبت پرداخت جدید"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_font_defult"
                android:typeface="sans"
                app:fontFile="fonts/SCNormal.otf" />
        </LinearLayout>
    </FrameLayout>
    <!--<ImageView android:layout_width="3dp"  android:layout_height="3dp" android:src="@drawable/ic_triangle_right"/>-->
</LinearLayout>

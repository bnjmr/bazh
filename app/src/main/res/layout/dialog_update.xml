<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layMainDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e7e8"
    android:layout_margin="36dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ir.jahanmirbazh.components.PersianTextViewNormal
            android:id="@+id/txtMessageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:minHeight="30dp"
            android:minWidth="70dp"
            android:padding="5dp"
            android:text="به روز رسانی"
            android:textColor="@color/color_black"
            android:textSize="@dimen/size_font_very_small"
            android:typeface="serif" />
    </LinearLayout>


    <WebView
        android:id="@+id/web"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </WebView>

    <ir.jahanmirbazh.components.PersianTextViewNormal
        android:id="@+id/txtVer"
        android:textColor="@color/color_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ir.jahanmirbazh.components.PersianTextViewNormal
            android:id="@+id/txtClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@color/color_main_app"
            android:gravity="center"
            android:padding="4dp"
            android:text="بستن"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ir.jahanmirbazh.components.PersianTextViewNormal
            android:id="@+id/txtUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@color/activity_login_color"
            android:gravity="center"
            android:padding="4dp"
            android:text="به روز رسانی"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

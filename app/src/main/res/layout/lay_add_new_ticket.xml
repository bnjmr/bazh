<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:orientation="horizontal"
              android:layout_centerHorizontal="true"
              android:layout_height="wrap_content">
    <ImageView android:layout_width="3dp"  android:layout_height="3dp" android:src="@drawable/ic_triangle_left"/>
    <FrameLayout android:layout_width="match_parent"
                 android:background="@drawable/bg_rounded_bottom_icon"
                  android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content">
            <net.kianoni.fontloader.TextView
                    app:fontFile="fonts/sl.ttf"
                    android:layout_width="match_parent"
                    android:text="+"
                    android:textColor="@color/color_white"
                    android:typeface="sans"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/size_font_big"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_rounded_bottom_title"
                android:layout_height="match_parent">
            <net.kianoni.fontloader.TextView
                    app:fontFile="fonts/SCNormal.otf"
                    android:layout_width="match_parent"
                    android:text="ثبت تیکت جدید"
                    android:textColor="@color/color_white"
                    android:typeface="sans"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/size_font_defult"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <!--<ImageView android:layout_width="3dp"  android:layout_height="3dp" android:src="@drawable/ic_triangle_right"/>-->
</LinearLayout>

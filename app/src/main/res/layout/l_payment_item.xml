<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_lst_item_normal"
    android:orientation="horizontal">
    <!--<LinearLayout android:layout_width="3dp"-->
    <!--android:id="@+id/layStatus"-->
    <!--android:orientation="vertical"-->
    <!--android:layout_height="match_parent"/>-->


    <LinearLayout
        android:id="@+id/layMoreDetail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMoreDetail"
            android:layout_width="@dimen/size_image_big"
            android:layout_height="@dimen/size_image_big"
            android:src="@drawable/ic_more_detail" />


    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#8fff" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <net.kianoni.fontloader.TextView
                android:id="@+id/txtPaymentTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="شرکت گاز "
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_font_defult"
                app:fontFile="fonts/sl.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8fff" />

            <ir.jahanmirbazh.components.PersianTextViewThin
                android:id="@+id/txtPaymentAmount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1394/06/01 "
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_font_defult" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8fff" />

            <ir.jahanmirbazh.components.PersianTextViewThin
                android:id="@+id/txtPaymentRegDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1394/06/26"
                android:textDirection="rtl"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_font_defult" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:orientation="vertical">

            <net.kianoni.fontloader.TextView
                android:id="@+id/txtBillSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="نوع فیش"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_font_defult"
                app:fontFile="fonts/sl.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:background="#8fff" />

            <net.kianoni.fontloader.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="مبلغ پرداختی"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_font_defult"
                app:fontFile="fonts/sl.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:background="#8fff" />

            <net.kianoni.fontloader.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="زمان پرداخت"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_font_defult"
                app:fontFile="fonts/sl.ttf" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
